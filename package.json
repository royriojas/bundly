{
  "name": "bundly",
  "version": "1.0.0",
  "description": "watchify/browserify wrapper with some useful preconfigured transforms and cache support, to remember the files that were processed and speed up the bundling time",
  "main": "index.js",
  "scripts": {
    "beautify": "esbeautifier './index.js' './lib/**/*.js' './specs/**/*.js' './src/**/*.js'",
    "beautify-check": "esbeautifier -k './index.js' './lib/**/*.js' './specs/**/*.js' './src/**/*.js'",
    "eslint": "eslinter './index.js' './lib/**/*.js' './specs/**/*.js' './src/**/*.js'",
    "lint": "npm run beautify && npm run eslint",
    "test": "mocha-runner './specs/**/*.js'",
    "cover": "istanbul cover -x specs/**/*.js mocha-runner './specs/**/*.js' html text-summary",
    "watch": "watch-spawn -i -p npm run cover",
    "check": "npm run beautify-check && npm run eslint",
    "prepush": "npm run check && npm run test",
    "changelog": "changelogx -f markdown -o ./changelog.md",
    "install-hooks": "prepush install && changelogx install-hook",
    "bump": "bumpery --verify='npm run check'"
  },
  "bin": {
    "bundly": "./bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/royriojas/bundly"
  },
  "license": "MIT",
  "author": "Roy Riojas (http://royriojas.com)",
  "prepush": [
    "npm run check"
  ],
  "devDependencies": {
    "bumpery": "^1.0.7",
    "changelogx": "^1.0.13",
    "esbeautifier": "^3.1.3",
    "eslinter": "^2.0.1",
    "istanbul": "^0.3.17",
    "mocha-runner": "^1.0.8",
    "prepush": "^2.0.4",
    "proxyquire": "^1.6.0",
    "watch-spawn": "^1.0.3"
  },
  "dependencies": {
    "babel-core": "^5.6.15",
    "browserify": "^10.2.4",
    "browserify-transform-tools": "^1.4.2",
    "clix": "^1.1.2",
    "console-filter": "^1.0.0",
    "consoleify": "^1.1.0",
    "dispatchy": "^1.0.3",
    "es6-promise": "^2.3.0",
    "extend": "^3.0.0",
    "file-entry-cache": "^1.0.1",
    "flat-cache": "^1.0.3",
    "glob-expand": "^0.1.0",
    "moment": "^2.10.3",
    "read-file": "^0.1.2",
    "require-arr": "^1.0.2",
    "shimixify": "^1.1.2",
    "stricterify": "^1.0.3",
    "uglify-js": "^2.4.23",
    "watchify": "^2.6.0",
    "write": "^0.2.0"
  },
  "changelogx": {
    "ignoreRegExp": [
      "BLD: Release",
      "DOC: Generate Changelog",
      "Generated Changelog",
      "REF: formatted missing files"
    ],
    "issueIDRegExp": "#(\\d+)",
    "commitURL": "https://github.com/royriojas/bundly/commit/{0}",
    "authorURL": "https://github.com/{0}",
    "issueIDURL": "https://github.com/royriojas/bundly/issues/{0}",
    "projectName": "bundly"
  },
  "bugs": {
    "url": "https://github.com/royriojas/bundly/issues"
  },
  "homepage": "https://github.com/royriojas/bundly",
  "keywords": [
    "watchify",
    "browserify",
    "cache",
    "incremental build",
    "incremental browserify",
    "browserify with cache"
  ]
}
